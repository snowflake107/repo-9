{
    "name": "zotapay/zota-woocommerce",
    "minimum-stability": "stable",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Zotapay Developers",
            "email": "open-source@zotapay.com",
            "homepage": "https://developers.zotapay.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "support@zotapay.com"
    },
    "require": {
        "zotapay/php-sdk": "^1.1"
    },
    "require-dev": {
        "oomphinc/composer-installers-extender": "*",
        "phpcompatibility/php-compatibility": "*",
        "phpcompatibility/phpcompatibility-paragonie": "*",
        "phpcompatibility/phpcompatibility-wp": "*",
        "phpunit/phpunit": "*",
        "sirbrillig/phpcs-variable-analysis": "*",
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*"
    },
    "scripts": {
      "config-cs": [
        "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
        "\"vendor/bin/phpcs\" --config-set installed_paths ../../phpcompatibility/php-compatibility,../../phpcompatibility/phpcompatibility-paragonie,../../phpcompatibility/phpcompatibility-wp,../../sirbrillig/phpcs-variable-analysis,../../wp-coding-standards/wpcs"
      ],
      "post-install-cmd": "@config-cs",
      "post-update-cmd": "@config-cs",
      "lint": "\"./vendor/bin/phpcs\" . "
    },
    "bin": ["./vendor/bin"]
}
